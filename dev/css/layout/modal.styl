@import "variables.styl"

.fancybox-close
  background: url("/assets/img/close.svg") no-repeat center !important;
  position: absolute !important;
  top: 20px !important;
  right: 20px !important;
  width: 16px !important;
  height: 16px !important;
  cursor: pointer !important;
  z-index: 8040 !important;


.modal-fancybox
    background #f5f5f5
    width 100%
    max-width 480px
    width 480px
    text-align center
    &-title
        margin-left 20px
        margin-right 20px
        text-align center
        font-size 24px
        color #333
        padding-bottom 10px
        text-transform uppercase
        width 400px
        margin auto
        padding-top 30px
        font-family pf_din_text_comp_proregular
        border-bottom 1px solid #ebebeb
    &-body
        padding-top: 23px;
        width: 290px;
        margin: auto;
        padding-bottom: 60px;
        input
            height 35px
            width 100%
            border 1px solid #e5e5e5
            background #fff
            padding-left 10px
            color #666
            font-size 16px
            padding-right 10px
        .input-checkbox
            width 20px
            height 20px
            float left
            margin-right 20px
            & + .input-label
                width: calc(100% - 40px);
                float: left;
                margin-top: 10px;
                margin-bottom: 20px;
    .input
        text-align left
        margin-bottom 20px
        display block
        font-family: 'Open Sans', sans-serif;
        font-weight: normal;
    .btn
        font-family: pf_din_text_comp_proregular;
        border-radius: 4px;
        background-color: #3cb4e7;
        box-shadow: 0px 5px 10px 0px rgba(255,255,255,0.15);
        width: 235px;
        height: 51px;
        line-height: 51px;
        text-decoration: none;
        letter-spacing: 1px;
        color: #fff;
        display: inline-block;
        text-transform: uppercase;
        font-size: 21px;
        border: 0;
        text-align: center;
        vertical-align: middle;
        padding 0
        &:hover,
        &:focus
            color #fff
            text-decoration underline
