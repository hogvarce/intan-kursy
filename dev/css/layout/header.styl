@import "variables.styl"

.header
    min-width 100%
    background-color $colorGreen
    color #fff
    padding 12px 0
    position fixed
    z-index 100
    top 0px
    height 60px
    &__licence
        font-family 'pf_dindisplay_promedium'
        font-size 14px
    &__register
        margin-top 5px
    &__btn
        background-color $colorBlue
        color #fff
        padding 15px 30px
        text-transform uppercase
        font-family 'pfdintextcomppro-bold'
        font-size 18px
        &:hover
        &:focus
            color #fff
